<html xmlns:nevow="http://nevow.com/ns/nevow/0.1">
<head>
	<title>antioch Object Editor</title>
	<link rel="stylesheet" type="text/css" href="/plugin/editor/assets/css/jquery-ui/jquery-ui.custom.css"/>
	<link rel="stylesheet" type="text/css" href="/assets/css/global.css"/>
	<link rel="stylesheet" type="text/css" href="/plugin/editor/assets/css/object-editor.css"/>
	<script type="text/javascript" src="http://www.google.com/jsapi"></script>
	<script type="text/javascript">
		google.load('jquery', '1.4.2');
		google.load('jqueryui', '1.8.4');
		google.setOnLoadCallback(function(){
			init();
		}, true);
	</script>
	<script type="text/javascript" src="/assets/js/global.js"></script>
	<script type="text/javascript" src="/plugin/editor/assets/js/object-editor.js"></script>
	<script type="text/javascript" src="/plugin/editor/assets/js/editor-plugin-support.js"></script>
</head>
<body>
	<div class="editor ui-widget ui-widget-content ui-corner-all">
		<div class="controls">
			<div class="field-row">
			<label id="name-label" for="name-field">name:</label>
			<input id="name-field" type="text" size="30"/>
			</div>
			<div class="field-row">
			<label id="parent-label" for="parent-field">parents:</label>
			<input type="text" id="parent-field" size="20"/>
			</div>
			<div class="field-row">
			<label id="location-label" for="location-field">location:</label>
			<input type="text" id="location-field" size="20"/>
			</div>
			<div class="field-row">
			<label id="owner-label" for="owner-field">owner:</label>
			<input type="text" id="owner-field" size="20"/>
			</div>
			<div class="field-row">
			<label id="id-label" for="id-field">id:</label>
			<input id="id-field" type="text" size="10" disabled="1"/>
			</div>
			<input type="button" id="access-button" value="access..." />
		</div>
		<div class="attributes">
			<div class="verbs">
				<label id="verbs-label" for="verbs-select">verbs:</label>
				<select id="verbs-select" size="8"></select>
				<button id="add-verb"></button>
				<button id="remove-verb"></button>
			</div>
			<div class="properties">
				<label id="properties-label" for="properties-select">properties:</label>
				<select id="properties-select" size="8"></select>
				<button id="add-prop"></button>
				<button id="remove-prop"></button>
			</div>
		</div>
	</div>
	<div class="controls">
		<button type="button" class="action-button" id="save-button">save</button>
		<button type="button" class="action-button" id="cancel-button">cancel</button>
	</div>
</body>
</html>
