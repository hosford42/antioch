<html xmlns:nevow="http://nevow.com/ns/nevow/0.1">
<head>
	<title>txSpace Client</title>
	<link rel="stylesheet" type="text/css" href="/assets/css/global.css"/>
	<link rel="stylesheet" type="text/css" href="/assets/css/object-editor.css"/>
	<script type="text/javascript" src="/assets/js/global.js"></script>
	<script type="text/javascript" src="/assets/js/jquery-1.3.2.min.js"></script>
	<script type="text/javascript" src="/assets/js/object-editor.js"></script>
</head>
<body>
	<table id="vitals" class="editor">
		<tr>
			<td>
				<label id="name-label" for="name-field">Name:</label>
			</td>
			<td>
				<input id="name-field" type="text" size="30"/>
			</td>
		</tr>
		<tr>
			<td>
				<label id="parent-label" for="parent-field">Parent:</label>
			</td>
			<td>
				<input id="parent-field" type="text" size="30"/>
				<input id="parent-button" type="button" value="..." />
			</td>
		</tr>
		<tr>
			<td>
				<label id="location-label" for="location-field">Location:</label>
			</td>
			<td>
				<input id="location-field" type="text" size="30"/>
				<input id="location-button" type="button" value="..." />
			</td>
		</tr>
		<tr>
			<td>
				<label id="owner-label" for="owner-field">Owner:</label>
			</td>
			<td>
				<input id="owner-field" type="text" size="30"/>
				<input id="owner-button" type="button" value="..." />
			</td>
		</tr>
		<tr>
			<td>
				<label id="id-label" for="id-field">ID:</label>
			</td>
			<td>
				<input id="id-field" type="text" size="10" disabled="1"/>
			</td>
		</tr>
		<tr>
			<td>
			</td>
			<td>
				<input id="access-button" type="button" value="Access..." />
			</td>
		</tr>
	</table>

	<table class="editor" id="verbs-properties">
		<tr>
			<td>
				<label id="verbs-label" for="verbs-select">Verbs:</label>
				<select id="verbs-select" size="8"></select>
			</td>
			<td>
				<label id="properties-label" for="properties-select">Properties:</label>
				<select id="properties-select" size="8"></select>
			</td>
		</tr>
		<tr>
			<td>
				<input type="button" id="add-verb" value="+" />
				<input type="button" id="remove-verb" value="-" />
			</td>
			<td>
				<input type="button" id="add-prop" value="+" />
				<input type="button" id="remove-prop" value="-" />
			</td>
		</tr>
		<tr>
			<td colspan="2" style="text-align: right;">
				<input type="button" id="cancel-button" value="cancel" />
				<input type="button" id="save-button" value="save" />
			</td>
		</tr>
	</table>
</body>
</html>
